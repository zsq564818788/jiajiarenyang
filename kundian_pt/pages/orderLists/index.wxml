<view class="title-content">
    <view bindtap="selected" class="item {{item.id==currentId?'active':''}}" data-id="{{item.id}}" style="color:{{item.id==currentId?bgColor:''}}" wx:for="{{types}}" wx:key="id">
        <view>{{item.title}}</view>
        <view class="num" wx:if="{{item.read>0&&!item.clicked}}">{{item.read}}</view>
    </view>
</view>
<view class="block"></view>
<view class="lists-item" wx:if="{{isContent}}" wx:for="{{orderList}}" wx:key="id">
    <view class="item-title">
        <view class="headLine" style="color:{{bgColor}}">{{item.status_txt}}</view>
        <view bindtap="deleteItem" class="iconfont icon-delete" data-orderid="{{item.id}}" wx:if="{{item.status_code==5||item.status_code==3||item.status_code==7}}"></view>
    </view>
    <view bindtap="orderDetail" class="item-content" data-orderid="{{item.id}}">
        <view class="item-info-mian">
            <image src="{{item.cover}}"></image>
            <view class="item-info-content">
                <view class="item-titler">{{item.goods_name}}</view>
                <view class="info-spec" wx:if="{{item.sku_name!='[]'}}">
                    <text>规格:</text>
                    <text>{{item.sku_name}}</text>
                </view>
                <view class="money">
                    <view>
                        <text>￥</text>{{item.price}}</view>
                    <view>x{{item.num}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="item-footer">
        <view>共{{item.num}}件商品 合计:￥
            <text>{{item.total_price}}</text>
        </view>
        <view class="btn-wrapper">
            <button bindtap="cancelOrder" class="btnStyles" data-orderid="{{item.id}}" wx:if="{{item.status_code==0}}">取消订单</button>
            <view wx:else></view>
            <button bindtap="applyRefund" class="btnStyle" data-orderid="{{item.id}}" style="background:{{bgColor}}" wx:if="{{item.status_code==6}}">申请退款</button>
            <button bindtap="nowPay" class="btnStyle" data-orderid="{{item.id}}" style="background:{{bgColor}}" wx:if="{{item.status_code==0}}">立即付款</button>
            <button bindtap="confirmGoods" class="btnStyle" data-orderid="{{item.id}}" style="background:{{bgColor}}" wx:if="{{item.status_code==2}}">确认收货</button>
            <button bindtap="toComment" class="btnStyle" data-orderid="{{item.id}}" style="background:{{bgColor}}" wx:if="{{item.status_code==3&&item.is_comment==0}}">立即评价</button>
        </view>
    </view>
</view>
<view class="blocks"></view>
<view class="none" wx:if="{{!isContent}}">
    <image src="/kundian_farm/images/icon/none.png"></image>
    <text class="tags">您还没有相关的订单</text>
</view>
