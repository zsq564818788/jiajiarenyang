.header-wrapper {
    width: 100%;
    height: 100rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #39be58;
    overflow: hidden;
    z-index: 5;
    color: #fff;
    font-size: 32rpx;
}

.scrollView {
    width: 100%;
    height: 150rpx;
    display: flex;
    white-space: nowrap;
}

.item {
    display: inline-block;
    padding: 0 30rpx;
    line-height: 100rpx;
    letter-spacing: 3rpx;
}

.nav {
    position: relative;
}

.nav::before {
    content: '';
    position: absolute;
    left: -10%;
    bottom: 15rpx;
    width: 120%;
    height: 4rpx;
    border-radius: 2rpx;
    background: currentColor;
    transition: all 0.3s;
    opacity: 0;
}

.active {
    font-weight: 500;
}

.active::before {
    content: '';
    position: absolute;
    left: 0%;
    bottom: 15rpx;
    width: 100%;
    height: 4rpx;
    border-radius: 2rpx;
    background: #fff;
    transition: all 0.3s;
    opacity: 1;
}

.block100 {
    height: 100rpx;
}