@import "../../../../wuBaseWxss/1.wxss";

page {
    background: #f4f4f4;
}

.banner {
    width: 100%;
    height: 750rpx;
    position: relative;
}

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.monitor {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.adopt-video {
    width: 100%;
    height: 750rpx;
    background: black;
}

.live-play {
    width: 100%;
    margin-top: 85rpx;
}

.video {
    width: 100%;
    height: 450rpx;
    position: absolute;
    left: 0;
    top: 0;
    margin-top: 150rpx;
}

.details {
    width: 100%;
    margin-top: 10rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background: white;
}

.detailsName {
    color: #545454;
    font-size: 36rpx;
    line-height: 80rpx;
}

.describe {
    color: #8b8b8b;
    font-size: 32rpx;
}

.price {
    color: #545454;
    font-size: 38rpx;
    line-height: 70rpx;
    position: relative;
    padding-left: 25rpx;
    justify-content: space-between;
}

.limit {
    font-size: 26rpx;
    color: #9e9e9e;
}

.line20 {
    position: absolute;
    top: -5rpx;
    left: 0rpx;
    font-size: 24rpx;
}

.block20 {
    height: 10rpx;
    background-color: #f4f4f4;
}

.footer {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    height: 600rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
}

.adoptImg {
    width: 240rpx;
    height: 240rpx;
    text-align: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.adoptImg image {
    width: 200rpx;
    height: 200rpx;
}

.adoptPrice {
    font-size: 46rpx;
    margin-left: 20rpx;
}

.chooseTime {
    margin-top: 25rpx;
    font-size: 30rpx;
    color: #383838;
}

.chooseNum {
    width: 100%;
    overflow-y: auto;
    height: 400rpx;
}

.chooseN {
    width: 90rpx;
    height: 60rpx;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #3f3f3f;
    text-align: center;
    line-height: 60rpx;
    background: #d2d2d2;
    margin: 0 15rpx 0 15rpx;
}

.clickNumLift {
    color: #9e9e9e;
    background: #eeeeee;
}

.clickNumRight {
    color: #9e9e9e;
    background: #eeeeee;
}

.confrim {
    width: 94%;
    margin-left: 3%;
    position: absolute;
    bottom: 30rpx;
    left: 0;
}

.danwei {
    position: absolute;
    font-size: 24rpx;
}

.proImgs {
    width: 96%;
    padding: 2%;
    background: white;
}

.cu-btn {
    width: 260rpx;
    height: 70rpx;
}

.price-desc {
    font-size: 24rpx;
    line-height: 30rpx;
}

.cu-li {
    position: relative;
    width: 94%;
    margin: auto;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    padding: 0 3% 0 3%;
}

.cu-tag {
    font-size: 28rpx;
}