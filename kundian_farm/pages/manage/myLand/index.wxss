@import "../../../../wuBaseWxss/1.wxss";

page {
    background-color: #f4f4f4;
}

.container {
    width: 94%;
    margin: 20rpx auto;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 5rpx rgba(238,238,238,0.8);
    overflow: hidden;
    padding-bottom: 20rpx;
}

.title_name {
    font-size: 40rpx;
    color: #fc8535;
    font-weight: 400;
    letter-spacing: 3rpx;
    position: relative;
    text-align: center;
}

.title_desc {
    color: #ffc096;
    font-size: 32rpx;
    text-align: center;
    margin-top: 10rpx;
    letter-spacing: 3rpx;
}

.orderInfo_container {
    width: 100%;
    margin-top: 40rpx;
    border-top: 1rpx dashed #fc8535;
    border-bottom: 1rpx dashed #fc8535;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #1e1b1c;
}

.head {
    color: #6a6767;
    width: 200rpx;
}

.seed_container {
    width: 90%;
    border-radius: 10rpx;
    border: 1rpx solid #dadddc;
    margin: 30rpx auto;
    padding-bottom: 20rpx;
    font-size: 28rpx;
}

.seed-info {
    width: 95%;
    margin-left: 5%;
    height: 60rpx;
    line-height: 60rpx;
}

.seed-info .info-title {
    width: 35%;
    color: gray;
}

.seed-btn {
    width: 90%;
    margin-left: 5%;
    height: 90rpx;
}

.seed-btn .seed-status {
    width: auto;
    padding: 0 10rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50rpx;
    border: 1rpx solid #09BB07;
    color: #09BB07;
    margin-right: 20rpx;
    font-size: 24rpx;
}

.seed_title {
    font-size: 32rpx;
    font-weight: 400;
    color: #454545;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    letter-spacing: 3rpx;
    border-left: 10rpx solid #09BB07;
    width: 90%;
    margin-left: 5%;
    margin-top: 20rpx;
    background: #f4f4f4;
}

.block20 {
    height: 20rpx;
}