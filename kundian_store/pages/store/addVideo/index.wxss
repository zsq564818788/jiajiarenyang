page {
    background: #f4f4f4;
}

.store-logo {
    width: 120rpx;
    height: 80rpx;
    position: relative;
    left: 23%;
    border-radius: 10rpx;
}

.icon-right {
    color: gray;
    font-size: 34rpx;
}

.card {
    width: 100%;
    height: 160rpx;
    background: #4497f7;
}

.card .card_header {
    width: 97%;
    display: flex;
    justify-content: space-around;
    margin: auto;
    padding: 20px 0 30px;
}

.card_header view {
    width: 47%;
    background: #d3eafc;
    text-align: center;
    color: #4497f7;
    font-size: 34rpx;
    line-height: 80rpx;
    border-radius: 10rpx 10rpx 0 0;
}

.active {
    background: #fff!important;
}

.card_address {
    width: 89%;
    margin: auto;
    padding: 20rpx 20rpx 90rpx;
    margin-top: -40rpx;
    z-index: 2;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.save-btn {
    width: 90%;
    margin-left: 5%;
    margin-top: 40rpx;
    height: 76rpx;
}