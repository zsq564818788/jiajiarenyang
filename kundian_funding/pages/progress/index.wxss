.block {
    width: 100%;
    height: 20rpx;
    background: #F4F3F1;
}

.history_wrapper {
    display: flex;
    align-items: flex-start;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
}

.time_wrapper {
    padding: 0 20rpx;
    box-sizing: border-box;
}

.item_date {
    font-size: 40rpx;
    font-weight: 500;
    color: #232323;
}

.item_time {
    font-size: 32rpx;
    color: #8A8A8A;
    margin-top: 10rpx;
}

.item_inners {
    flex: 1;
    font-size: 30rpx;
    line-height: 45rpx;
    color: #3B3B3B;
    border-left: 10rpx solid #16BA63;
    padding: 10rpx 10rpx 10rpx 20rpx;
    box-sizing: border-box;
}

.img_wrapper {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.img_wrapper image {
    width: 150rpx;
    height: 150rpx;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    border-radius: 15rpx;
}