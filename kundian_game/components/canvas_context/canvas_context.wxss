.canvas_wrapper {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.3);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 200;
    overflow: hidden;
    text-align: center;
}

.coins {
    width: 550rpx;
    height: 550rpx;
    display: inline-block;
}

.coin_wrapper {
    width: 550rpx;
    position: absolute;
    top: 250rpx;
    left: 50%;
    z-index: 210;
    transition: all .3s;
    text-align: center;
}

.scale1 {
    transform: scale(1) translateX(-50%);
}

.scale0 {
    transform: scale(0);
}

.receive {
    width: 250rpx;
    height: 76rpx;
    display: inline-block;
}