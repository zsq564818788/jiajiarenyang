.pool_wrapper {
    position: absolute;
    right: 0;
    top: 630rpx;
    overflow: hidden;
    width: 325rpx;
    height: 250rpx;
}

.pool_content {
    width: 400rpx;
    height: 250rpx;
    position: relative;
    top: 0;
    left: 0;
}

.pond_bg {
    width: 80%;
    height: 80%;
    position: absolute;
    top: 45rpx;
    left: 55rpx;
    z-index: 5;
}

.wave2 {
    width: 80%;
    height: 80%;
    position: absolute;
    top: 40rpx;
    left: 55rpx;
    z-index: 6;
    animation: rotates 2s infinite;
}

@-webkit-keyframes rotates {
    50% {
        transform: rotate(.5deg) translateX(0.5rpx);
    }

    100% {
        transform: rotate(0deg) translateX(0rpx);
    }
}

@keyframes rotates {
    50% {
        transform: rotate(.5deg) translateX(0.5rpx);
    }

    100% {
        transform: rotate(0deg) translateX(0rpx);
    }
}

@-webkit-keyframes rotatess {
    50% {
        transform: rotate(-0.5deg) translateX(-0.5rpx);
    }

    100% {
        transform: rotate(0deg) translateX(0rpx);
    }
}

@keyframes rotatess {
    50% {
        transform: rotate(-0.5deg) translateX(-0.5rpx);
    }

    100% {
        transform: rotate(0deg) translateX(0rpx);
    }
}

