page {
    background: #F3F3F3;
}

.reflect {
    width: 180rpx;
    height: 234rpx;
    margin: 100rpx auto 0;
}

.reflect image {
    width: 100%;
    height: 100%;
}

.money {
    text-align: center;
    font-size: 32rpx;
    font-weight: 500;
    margin-top: 30rpx;
    letter-spacing: 3rpx;
}

.money text {
    font-size: 28rpx;
}

.bigSize {
    font-size: 40rpx;
    margin-top: 20rpx;
}

.reflectBtn {
    width: 80%;
    background: #1AAD19;
    color: #fff;
    border: none;
    border-radius: 50rpx;
    margin-top: 50rpx;
    font-size: 32rpx;
    letter-spacing: 3rpx;
}

.reflectBtn::after {
    border: none;
}

.notice {
    font-size: 28rpx;
    color: #959595;
    text-align: center;
    margin-top: 30rpx;
    letter-spacing: 3rpx;
}

.notices {
    font-size: 28rpx;
    color: #666666;
    text-decoration: underline;
    text-align: center;
    margin-top: 20rpx;
    letter-spacing: 3rpx;
}

.opacity {
    opacity: 0.5;
}