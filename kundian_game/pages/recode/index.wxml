<view>
    <view class="main_container {{item.show?'':'borderBottom'}}" wx:for="{{records}}" wx:key="id">
        <view class="item_containre">
            <view bindtap="showDesc" data-id="{{item.id}}">
                <view class="date_container">
                    <view>{{item.create_time}}</view>
                    <view class="income_container">提现￥{{item.totalMoney}}</view>
                    <view class="iconfont icon-right ml5 {{item.show?'roate1':''}}"></view>
                </view>
            </view>
            <view class="details_container {{item.show?'mt20':''}}" style="height:{{item.show?item.list.length*150:'0'}}rpx">
                <view class="list_container" wx:for="{{item.list}}" wx:key="id">
                    <view class="lists">
                        <image class="goldCoin" src="../../images/farm/coin.png"></image>
                        <view class="list_desc">
                            <view>
                                <view class="list_title">{{item.body}}</view>
                                <view class="list_time">{{item.create_time}}</view>
                            </view>
                            <view class="list_price">
                                <text class="f24">￥</text>{{item.money}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
